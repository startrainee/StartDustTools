<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AnimationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_frame_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="逐帧动画"
            android:onClick="startFrameAnimation"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_tween_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="补间动画"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn__animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_view_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>